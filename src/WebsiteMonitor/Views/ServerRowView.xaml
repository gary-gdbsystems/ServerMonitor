<UserControl x:Class="WebsiteMonitor.Views.ServerRowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WebsiteMonitor.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ServerRowViewModel}">

    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Assign to Group" x:Name="AssignToGroupMenuItem">
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Header" Value="{Binding Name}"/>
                        <Setter Property="Command" Value="{Binding DataContext.AssignToGroupCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <Setter Property="CommandParameter" Value="{Binding}"/>
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
            <MenuItem Header="New Group..." x:Name="NewGroupMenuItem" Click="NewGroupMenuItem_Click"/>
            <MenuItem Header="Remove from Group"
                      Command="{Binding RemoveFromGroupCommand}"
                      IsEnabled="{Binding GroupName, Converter={StaticResource NotNullToBoolConverter}}"/>
            <Separator/>
            <MenuItem Header="Copy Port" Command="{Binding CopyPortCommand}"/>
            <MenuItem Header="Open in Browser" Command="{Binding OpenInBrowserCommand}"
                      IsEnabled="{Binding IsRunning}"/>
            <Separator/>
            <MenuItem Header="Start Process" Command="{Binding StartCommand}"
                      IsEnabled="{Binding CanStart}">
                <MenuItem.Visibility>
                    <Binding Path="IsRunning" Converter="{StaticResource InverseBoolToVisibilityConverter}"/>
                </MenuItem.Visibility>
            </MenuItem>
            <MenuItem Header="Stop Process" Command="{Binding KillProcessCommand}"
                      IsEnabled="{Binding IsRunning}"/>
            <MenuItem Header="Remove from List" Command="{Binding RemoveCommand}"/>
            <Separator/>
            <MenuItem Header="Ignore This Process Type" Command="{Binding IgnoreProcessCommand}"
                      ToolTip="Add this process name to the ignore list"/>
        </ContextMenu>
    </UserControl.ContextMenu>

    <Border x:Name="CardBorder"
            CornerRadius="8"
            Padding="14,12"
            Cursor="Hand">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#161616" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.BorderBrush>
            <SolidColorBrush Color="#2A2A2A"/>
        </Border.BorderBrush>
        <Border.BorderThickness>
            <Thickness>1</Thickness>
        </Border.BorderThickness>

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Opacity" Value="1"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="#3A3A3A"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#1E1E1E" Offset="0"/>
                                    <GradientStop Color="#1A1A1A" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                    <DataTrigger Binding="{Binding IsRunning}" Value="False">
                        <Setter Property="Opacity" Value="0.6"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Status Indicator with Glow -->
            <Grid Grid.Column="0" Margin="0,0,14,0" VerticalAlignment="Center">
                <!-- Running State - Green Glow -->
                <Grid Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                    <!-- Outer Glow -->
                    <Ellipse Width="20" Height="20" Opacity="0.15">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#00FF88" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <!-- Inner Dot -->
                    <Ellipse Width="8" Height="8"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#00FF88"/>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="8"
                                              ShadowDepth="0"
                                              Color="#00FF88"
                                              Opacity="0.8"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Grid>

                <!-- Stopped State - Gray Dot -->
                <Grid Visibility="{Binding IsRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <Ellipse Width="8" Height="8"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#4A4A4A"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
            </Grid>

            <!-- Server Info -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <!-- Process Name & Port Row -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               FontWeight="Medium"
                               FontSize="13">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource AccentEmeraldBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        <Run Text="{Binding Server.ProcessName, Mode=OneWay}"/>
                    </TextBlock>

                    <!-- Port Badge -->
                    <Border CornerRadius="4"
                            Padding="6,2"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#1E3A2E"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding Server.Port, StringFormat=:{0}}"
                                   FontFamily="Consolas, Cascadia Code, monospace"
                                   FontSize="11">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#4ADE80"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                            <Setter Property="Foreground" Value="#6A6A6A"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>

                </StackPanel>

                <!-- Status Info (subtle) -->
                <TextBlock FontSize="10"
                           Foreground="{StaticResource TextMutedBrush}"
                           Margin="0,4,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="{Binding Server.ProcessId, StringFormat='PID {0}'}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                    <Setter Property="Text" Value="Stopped"/>
                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Stop Button (only when running) -->
                <Button Content="STOP"
                        Command="{Binding KillProcessCommand}"
                        IsEnabled="{Binding IsTerminating, Converter={StaticResource InverseBoolConverter}}"
                        Style="{StaticResource KillButton}"
                        Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Start Button (only when stopped and can start) -->
                <Button Command="{Binding StartCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="10,6"
                        FontSize="11"
                        Margin="0,0,6,0"
                        Visibility="{Binding IsRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                        IsEnabled="{Binding CanStart}">
                    <Button.Content>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="START"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsStarting}" Value="True">
                                            <Setter Property="Text" Value="..."/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button.Content>
                </Button>

                <!-- Remove Button (only when stopped) -->
                <Button Content="REMOVE"
                        Command="{Binding RemoveCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="10,6"
                        FontSize="11"
                        Visibility="{Binding IsRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
